### 8 --- HRA HÁDAČKA ---

import random

zivot = 5

lvl1_pc = random.randint(1, 2)
lvl2_pc = random.randint(1, 3)
lvl3_pc = random.randint(1, 4)
lvl4_pc = random.randint(1, 5)
lvl5_pc = random.randint(1, 6)
lvl6_pc = random.randint(1, 7)
lvl7_pc = random.randint(1, 8)


while True:


    while True:

        if zivot == 0:
            break

        lvl1_pe = int(input("1. level - Zadej číslo od 1-2: "))

        if lvl1_pc < lvl1_pe:
            zivot -= 1
            print(f"Hádané číslo je menší než {lvl1_pe}.\nMáš {zivot} životy.\n")

        elif lvl1_pc > lvl1_pe:
            zivot -= 1
            print(f"Hádané číslo je větší než {lvl1_pe}.\nMáš {zivot} životy.\n")

        elif lvl1_pc == lvl1_pe:
            print(f"Padlo {lvl1_pc}, trefil jsi, gratuluji!\nMáš {zivot} životy.\n")
            break



    while True:

        if zivot == 0:
            break

        lvl2_pe = int(input("2. level - Zadej číslo od 1-3: "))

        if lvl2_pc < lvl2_pe:
            zivot -= 1
            print(f"Hádané číslo je menší než {lvl2_pe}.\nMáš {zivot} životy.\n")

        elif lvl2_pc > lvl2_pe:
            zivot -= 1
            print(f"Hádané číslo je větší než {lvl2_pe}.\nMáš {zivot} životy.\n")

        elif lvl2_pc == lvl2_pe:
            print(f"Padlo {lvl2_pc}, trefil jsi, gratuluji!\nMáš {zivot} životy.\n")
            break


    while True:

        if zivot == 0:
            break

        lvl3_pe = int(input("3. level - Zadej číslo od 1-4: "))

        if lvl3_pc < lvl3_pe:
            zivot -= 1
            print(f"Hádané číslo je menší než {lvl3_pe}.\nMáš {zivot} životy.\n")

        elif lvl3_pc > lvl3_pe:
            zivot -= 1
            print(f"Hádané číslo je větší než {lvl3_pe}.\nMáš {zivot} životy.\n")

        elif lvl3_pc == lvl3_pe:
            print(f"Padlo {lvl3_pc}, trefil jsi, gratuluji!\nMáš {zivot} životy.\n")
            break


    while True:

        if zivot == 0:
            break

        lvl4_pe = int(input("4. level - Zadej číslo od 1-5: "))

        if lvl4_pc < lvl4_pe:
            zivot -= 1
            print(f"Hádané číslo je menší než {lvl4_pe}.\nMáš {zivot} životy.\n")

        elif lvl4_pc > lvl4_pe:
            zivot -= 1
            print(f"Hádané číslo je větší než {lvl4_pe}.\nMáš {zivot} životy.\n")

        elif lvl4_pc == lvl4_pe:
            print(f"Padlo {lvl4_pc}, trefil jsi, gratuluji!\nMáš {zivot} životy.\n")
            break

    while True:

        if zivot == 0:
            break

        lvl5_pe = int(input("5. level - Zadej číslo od 1-6: "))

        if lvl5_pc < lvl5_pe:
            zivot -= 1
            print(f"Hádané číslo je menší než {lvl5_pe}.\nMáš {zivot} životy.\n")

        elif lvl5_pc > lvl5_pe:
            zivot -= 1
            print(f"Hádané číslo je větší než {lvl5_pe}.\nMáš {zivot} životy.\n")

        elif lvl5_pc == lvl5_pe:
            print(f"Padlo {lvl5_pc}, trefil jsi, gratuluji!\nMáš {zivot} životy.\n")
            break

    while True:

        if zivot == 0:
            break

        lvl6_pe = int(input("6. level - Zadej číslo od 1-7: "))

        if lvl6_pc < lvl6_pe:
            zivot -= 1
            print(f"Hádané číslo je menší než {lvl6_pe}.\nMáš {zivot} životy.\n")

        elif lvl6_pc > lvl6_pe:
            zivot -= 1
            print(f"Hádané číslo je větší než {lvl6_pe}.\nMáš {zivot} životy.\n")

        elif lvl6_pc == lvl6_pe:
            print(f"Padlo {lvl6_pc}, trefil jsi, gratuluji!\nMáš {zivot} životy.\n")
            break

    while True:

        if zivot == 0:
            break

        lvl7_pe = int(input("7. level - Zadej číslo od 1-8: "))

        if lvl7_pc < lvl7_pe:
            zivot -= 1
            print(f"Hádané číslo je menší než {lvl7_pe}.\nMáš {zivot} životy.\n")

        elif lvl7_pc > lvl7_pe:
            zivot -= 1
            print(f"Hádané číslo je větší než {lvl7_pe}.\nMáš {zivot} životy.\n")

        elif lvl7_pc == lvl7_pe:
            print(f"Padlo {lvl7_pc}, trefil jsi, gratuluji!\nMáš {zivot} životy.\n")
            break
